<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lzl.edu.com.ordermeal.ui.TabHomePageActivity">
    <include
        android:id="@+id/my_header"
        layout="@layout/includ_header"/>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/fresh_swipe"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_below="@+id/my_header"
                android:layout_height="130dp"
                android:layout_width="match_parent"
                />
            <ListView
                android:id="@+id/swipe_lv"
                android:divider="@color/color_image_gteal"
                android:dividerHeight="7dp"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:listSelector="@color/color_line"
                />
            <ImageView
                android:id="@+id/empty_view"
                android:layout_gravity="center_vertical"
                android:visibility="gone"
                android:src="@mipmap/ic_nodata"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
