<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    tools:context="lzl.edu.com.ordermeal.ui.MenuItemActivity">
<include layout="@layout/meal_header"/>
<ImageView
    android:id="@+id/meal_iv"
    android:src="@mipmap/image1"
    android:layout_width="match_parent"
    android:layout_height="150dp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">
        <TextView
            android:id="@+id/item_mealName_tv"
            android:text="菜名"
            android:textSize="20sp"
            android:textColor="@color/some_main_red"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_meal_price"
            android:text="价格"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:textColor="@color/some_main_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/linear_comment"
            android:layout_alignBottom="@+id/item_mealName_tv"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/ic_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_comment"
            android:text="评论"
            android:textSize="16sp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_below="@+id/item_mealName_tv"
            android:id="@+id/view_line"
            android:layout_centerInParent="true"
            android:background="@color/color_text_gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:id="@+id/myRelative"
            android:layout_below="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">
        <TextView
            android:id="@+id/item_describe_tv"
            android:textSize="14sp"
            android:singleLine="false"
            android:layout_marginTop="10dp"
            android:text="描述"
            android:textColor="@color/color_text_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="120dp"
            android:layout_height="40dp">
            <ImageButton
                android:id="@+id/order_minus"
                android:src="@mipmap/ic_minus"
                android:layout_gravity="center"
                android:background="@drawable/bg_image_selector"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <EditText
                android:text="1"
                android:gravity="center"
                android:id="@+id/orderNum_et"
                android:focusable="false"
                android:layout_width="50dp"
                android:layout_height="40dp" />
            <ImageButton
                android:id="@+id/order_plus"
                android:src="@mipmap/ic_plus"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_image_selector"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/linear_all"
            android:background="@color/linear_bg_grey"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:divider="@color/color_text_gray"
            android:layout_height="80dp">
        <ImageButton
            android:id="@+id/item_collect_btn"
            android:src="@mipmap/ic_collect_btn"
            android:text="@string/meal_collect"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_width="150dp"
            android:layout_height="60dp" />
            <ImageButton
                android:id="@+id/item_order_btn"
                android:src="@mipmap/ic_order_btn"
                android:text="@string/meal_order"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_width="150dp"
                android:layout_height="60dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
