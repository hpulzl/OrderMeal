<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <RelativeLayout
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/orderImage_iv"
            android:src="@mipmap/ic_nodata"
            android:layout_width="100dp"
            android:layout_height="80dp" />
        <TextView
            android:id="@+id/orderName_tv"
            android:layout_marginLeft="5dp"
            android:text="菜名"
            android:textColor="@color/some_change_red"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/orderImage_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/orderPrice_tv"
            android:layout_marginLeft="5dp"
            android:text="价格"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/orderImage_iv"
            android:layout_below="@+id/orderName_tv"
            android:textColor="@color/some_change_red"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/orderTime_tv"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="时间"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
      <TextView
          android:id="@+id/order_num"
          android:text="份数"
          android:layout_alignParentRight="true"
          android:layout_alignParentBottom="true"
          android:layout_marginRight="10dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"/>
    </RelativeLayout>
</LinearLayout>
